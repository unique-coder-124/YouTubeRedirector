{
  "manifest_version": 3,
  "name": "YouTube Popup Redirect",
  "version": "1.2",
  "description": "Detect YouTube video pages and offer redirection to popup mode.",
  "permissions": ["tabs", "scripting", "storage", "activeTab"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
